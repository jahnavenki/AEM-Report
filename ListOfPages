<sly data-sly-use.templates="core/wcm/components/commons/v1/templates.html" />
<sly data-sly-use.model="au.com.cfs.winged.core.models.CardGridContainerModel"/>
<sly data-sly-use.cardEditorialTemplate="../cardeditorial/cardeditorialTemplate.html" />
<sly data-sly-use.cardLeftTemplate="../cardleft/cardleftTemplate.html" />
<sly data-sly-use.cardCentreTemplate="../../../common/content/card/cardTemplate.html" />
<sly data-sly-use.paginationTemplate="../pagination/paginationTemplate.html" />

<sly data-sly-set.id="CardGrid-${model.uuid}" />

<div
  class="CardGridContainer"
  data-cmp-is="cardGridContainer"
  id="${id}"
  data-uuid="${model.uuid}"
  data-items-per-page="${model.itemsPerPage}"
  data-first-item-hero="${model.firstItemHero}"
  data-content-type="${model.contentType}"
  data-card-type="${model.cardType}"
  data-sly-test="${model.cardItems.size > 0}"
>
  <div class="aem-Grid aem-Grid--12" data-sly-list="${model.cardItems @ end= model.enablePagination ? model.itemsPerPage : model.cardItems.size}" data-cmp-hook-cardGridContainer="cardContainer">
    <div class="aem-GridColumn aem-GridColumn--xs--12 ${model.firstItemHero && itemList.first ? 'aem-GridColumn--lg--12' : 'aem-GridColumn--lg--4'}">

      <sly data-sly-test="${model.contentType == 'manual'}">
        <sly
          data-sly-test="${model.cardType == 'editorialCards'}"
          data-sly-call="${ cardEditorialTemplate.card @ model=item, disableParsys=true }"
        />
    
        <sly
          data-sly-test="${model.cardType == 'centerCards'}"
          data-sly-call="${ cardCentreTemplate.card @ model=item}"
        />
    
        <sly
          data-sly-test="${model.cardType == 'leftCards'}"
          data-sly-call="${ cardLeftTemplate.card @ model=item}"
        />
      </sly>

      <sly
        data-sly-test="${model.contentType == 'dynamic'}"
        data-sly-call="${ cardEditorialTemplate.card @ model=item, disableParsys=true}"
      />
    </div>
  </div>

  <sly
    data-sly-test="${model.enablePagination}"
    data-sly-call="${
      paginationTemplate.pagination
      @ type=model.paginationType,
      totalPages=model.totalPages,
      id=id,
      currentPage=1,
      maxNumbers=5
    }"
  />
</div>

<script data-sly-test="${model.uuid && model.jsonPayload}">
  window.CFSState = window.CFSState || {}
  window.CFSState.PageModel = window.CFSState.PageModel || {}
  window.CFSState.PageModel['cardGrid${model.uuid @ context="unsafe"}'] = ${model.jsonPayload @ context='unsafe'}
</script>

<sly data-sly-call="${templates.placeholder @ isEmpty = model.cardItems.size == 0, classAppend = ''}"></sly>
